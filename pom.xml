<project>
<groupId>org.cdlib</groupId>
<artifactId>xtf</artifactId>
<version>1.0-SNAPSHOT</version>
<packaging>war</packaging>
<modelVersion>4.0.0</modelVersion>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.4</version>
        <configuration>
	  <packagingExcludes>data/**,index/**</packagingExcludes>
          <webXml>xtf/WEB-INF/web.xml</webXml>
	  <includeEmptyDirectories>true</includeEmptyDirectories>
	  <warSourceDirectory>xtf</warSourceDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
